# Note: VIM users should use alternate marks [[[ and ]]] as the original ones can confuse nested
# substitutions, e.g.: ${${${VAR}}}
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
continuation_indent_size = 4
insert_final_newline = true

[Makefile]
indent_style = tab

[**.{md,rst}]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[.git*]
indent_size = tab
indent_style = tab

[*.{sh,zsh}]
shell_variant   = sh
max_line_length = 120
